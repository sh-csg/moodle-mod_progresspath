{{!
    @template mod_progresspath/cssskeleton

    Template for the stylesheet of the SVG.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
        "id": 10,
        "placecolor": "#c01c28",
        "strokecolor": "#ffffff",
        "strokeopacity": 1,
        "textcolor": "#ffffff",
        "visitedcolor": "#26a269",
        "height": 2111,
        "width": 800,
        "hidepaths": false,
        "mapid": "63bee8a5f1a1e",
        "usecheckmark": false,
        "editmode": true,
        "version": 2024032402,
        "pulse": false,
        "hover": false,
        "showall": false,
        "showtext": false,
        "slicemode": false
    }
}}
<style id="progresspath-svgstyle" type="text/css">

#progresspath-svgmap-{{mapid}} .progresspath-place {
    fill: {{ placecolor }};
    stroke-width: 3px;
    stroke: {{ strokecolor }};
    stroke-opacity: {{ strokeopacity }};
    {{^editmode}}
    {{^showall}}
    visibility: hidden;
    {{/showall}}
    {{/editmode}}
}

#progresspath-svgmap-{{mapid}} .progresspath-place.progresspath-visited {
    visibility: visible;
    opacity: 1;
    fill: {{ visitedcolor }};
}

#progresspath-svgmap-{{mapid}} .progresspath-path {
    stroke: {{ strokecolor }};
    stroke-width: 3px;
    stroke-linecap: round;
    fill: none;
    {{#hidepaths}}
    {{#editmode}}
    opacity: 0.5;
    {{/editmode}}
    {{^editmode}}
    visibility: hidden;
    {{/editmode}}
    {{/hidepaths}}
    {{^hidepaths}}
    {{^editmode}}
    {{^showall}}
    visibility: hidden;
    {{/showall}}
    {{#showall}}
    filter: grayscale(50%);
    opacity: 0.2;
    {{/showall}}
    {{/editmode}}
    {{/hidepaths}}
}

#progresspath-svgmap-{{mapid}} text {
    fill: {{ textcolor }};
    stroke: none;
    font-family: FreeSans;
    font-size: 20px;
    {{^showtext}}display: none;{{/showtext}}
}

#progresspath-svgmap-{{mapid}} .progresspath-targetplace {
    stroke-dasharray: 1,1;
}

#progresspath-svgmap-{{mapid}} .progresspath-checkmark {
    stroke-width: 3px;
    stroke-linecap: round;
    stroke: {{ strokecolor }};
    fill: none;
}
{{^editmode}}
#progresspath-svgmap-{{mapid}} .progresspath-hidden * {
    {{^showall}}
    visibility: hidden;
    {{/showall}}
    {{#showall}}
    filter: grayscale(50%);
    opacity: 0.5;
    {{/showall}}
}

#progresspath-svgmap-{{mapid}} .progresspath-place.progresspath-reachable,
#progresspath-svgmap-{{mapid}} .progresspath-path.progresspath-reachable {
    visibility: visible;
    opacity: 1;
}

#progresspath-svgmap-{{mapid}} .progresspath-waygone {
    stroke: {{visitedcolor}};
}

{{#hover}}
#progresspath-svgmap-{{mapid}} .progresspath-place:hover,
#progresspath-svgmap-{{mapid}} .progresspath-place:not(.progresspath-visited):hover {
    animation: none;
    stroke-width: 5px;
    stroke-opacity: 1;
}
{{/hover}}
{{#pulse}}
#progresspath-svgmap-{{mapid}} .progresspath-place:not(.progresspath-visited) {
    animation: pulse 1.5s infinite;
    stroke-opacity: 1;
}

@keyframes pulse {
    0% {
        stroke-width: 3px;
    }
    50% {
        stroke-width: 7px;
    }
    100% {
        stroke-width: 3px;
    }
}
{{/pulse}}
{{/editmode}}
{{#editmode}}
#progresspath-svgmap-{{mapid}} .progresspath-place:hover {
    fill: blue;
}
#progresspath-svgmap-{{mapid}} .progresspath-path:hover {
    stroke: blue;
    stroke-width: 6px;
}
#progresspath-svgmap-{{mapid}} .progresspath-selected {
    stroke: green;
}
#progresspath-svgmap-{{mapid}} .progresspath-selected-activity-selector {stroke-dasharray: 10; animation: dashdraw 4s linear infinite;}
       @keyframes dashdraw {to {stroke-dashoffset: 200;}}

#progresspath-svgmap-{{mapid}} .progresspath-emptyplace {
    opacity: 0.5;
}
{{/editmode}}
</style>