{{!
    @template mod_progresspath/rendercontainer

    Template for the container the progresspath is being rendered into.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * cmId The course module id of this progresspath
    * isIntro If this is being rendered as intro in the course or in separate view page

    Example context (json):
    {
        "cmId": "123",
        "enableLiveUpdater": true,
        "contentbefore": "<p>Some content before the map</p>",
        "hascontentbefore": true
    }
}}
<div class="progresspath-container">
  {{#hascontentbefore}}
  <div class="progresspath-content-before-map">
    {{{contentbefore}}}
  </div>
  {{/hascontentbefore}}
  <div id="progresspath-render-container-{{cmId}}" class="progresspath-render-container">
    {{> mod_progresspath/loadingplaceholder}}
  </div>
</div>
{{#js}}
  require(['mod_progresspath/renderer'], function(renderer) {
    renderer.init({{cmId}});
  });
  {{#enableLiveUpdater}}
      require(['mod_progresspath/initliveupdater'], function(initliveupdater) {
        initliveupdater.init({{cmId}});
      });
  {{/enableLiveUpdater}}
{{/js}}
